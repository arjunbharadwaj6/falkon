# ATS Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive credentials

# Server Configuration
PORT=5000
NODE_ENV=development

# PostgreSQL Database Configuration
# Use DATABASE_URL format for easier configuration
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:your-password@your-host:5432/database-name

# Optional: For SSL connections, append ?sslmode=require
# DATABASE_URL=postgresql://postgres:your-password@your-host:5432/database-name?sslmode=require

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration
# Choose one: gmail or SMTP provider (Zoho, SendGrid, AWS SES, etc.)

# Gmail Configuration (Option 1)
# Requires: Enable 2FA and generate App Password at https://myaccount.google.com/apppasswords
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-16-char-app-password
# EMAIL_FROM=noreply@yourcompany.com

# SMTP Configuration (Option 2) - For Zoho, SendGrid, etc.
EMAIL_SERVICE=smtp-provider-name
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourcompany.com
EMAIL_HOST=smtp.provider.com
EMAIL_PORT=465
EMAIL_SECURE=true

# Legacy SMTP Config (if not using EMAIL_SERVICE)
# SMTP_HOST=smtp.provider.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-username
# SMTP_PASSWORD=your-password

# Frontend URL (for password reset links and CORS)
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173
