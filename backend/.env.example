# ATS Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive credentials

# Server Configuration
PORT=5000
NODE_ENV=development

# PostgreSQL Database Configuration
# For Supabase or remote PostgreSQL:
DB_HOST=your-database-host.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_SSL=true

# For local PostgreSQL, use:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ats_db
# DB_USER=postgres
# DB_PASSWORD=your-local-password
# DB_SSL=false

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration
# Choose one: gmail or SMTP provider (Zoho, SendGrid, AWS SES, etc.)

# Gmail Configuration (Option 1)
# Requires: Enable 2FA and generate App Password at https://myaccount.google.com/apppasswords
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-16-char-app-password
# EMAIL_FROM=noreply@yourcompany.com

# SMTP Configuration (Option 2) - For Zoho, SendGrid, etc.
EMAIL_SERVICE=smtp-provider-name
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourcompany.com
EMAIL_HOST=smtp.provider.com
EMAIL_PORT=465
EMAIL_SECURE=true

# Legacy SMTP Config (if not using EMAIL_SERVICE)
# SMTP_HOST=smtp.provider.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-username
# SMTP_PASSWORD=your-password

# Frontend URL (for password reset links and CORS)
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173
