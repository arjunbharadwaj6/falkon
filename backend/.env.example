# ATS Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive credentials

# Server Configuration
PORT=5000
NODE_ENV=production

# Public API URL (used in emails for approval links)
# Production example: https://api.falkon.tech
# Development: http://localhost:5000
API_PUBLIC_URL=https://api.falkon.tech

# PostgreSQL Database Configuration (Neon recommended)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
DB_HOST=host
DB_PORT=5432
DB_DATABASE=database
DB_USER=user
DB_SSL=true

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-min-48-chars-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Zoho/SMTP)
EMAIL_SERVICE=zoho
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourcompany.com
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=465
EMAIL_SECURE=true

# Admin Account Configuration (used by seed:admin script)
ADMIN_EMAIL=falkon@falkon.tech
ADMIN_PASSWORD=ATSSystem2026
ADMIN_COMPANY=Falkon

# CORS (comma-separated origins). Use '*' only in development.
# Production: specify exact frontend URLs
CORS_ORIGIN=https://falkon.tech,https://www.falkon.tech
